    <style name="textView1" parent="linearlayout">
        <item name="android:padding">10dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/corJogador1</item>
    </style>


    <style name="textView2" parent="linearlayout">
        <item name="android:padding">10dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/corJogador2</item>
    </style>


    <style name="placar" parent="linearlayout">
        <item name="android:padding">10dp</item>
        <item name="android:textSize">24dp</item>
        <item name="android:text">@string/placar</item>
        <item name="android:textColor">@color/blue</item>
